@using bitirme.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman adı: @ViewBag.d</li>
</ol>

<table class="table table-bordered">
    <tr>
        @*<th>Personel ID</th>*@
        <th>Personel Ad</th>
        <th>Personel Soyad</th>
        @*<th>Personel Görsel</th>*@
        <th>Personel Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        @*<td>@x.Personelid</td>*@
        <td>@x.PersonelAd</td>
        <td>@x.PersonelSoyad</td>
        @*<td>@x.PersonelGorsel</td>*@

        <td><a href="/Departman/DepartmanPersonelSatis/@x.Personelid" class="btn btn-default" style="background-color:yellow">Satışlar</a></td>
    </tr>
    }
</table>
