@model bitirme.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<br />
<h2>Yeni Kategori Ekle</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.KategoriAd, "Kategori Adı:")
    @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
    @*virgülden sonraki new ile başlayan kısım textbox'a css vermek için*@
    @*html helper ile label, textbox gibi yapıları kullandım*@
    <br />
    <button class="btn btn-info" id="Btn1">KAYDET</button>
    <script>
        $('#Btn1').click(function ()
        {
            alert("Kategori başarılı bir şekilde eklendi")
        });
    </script>
</form>

