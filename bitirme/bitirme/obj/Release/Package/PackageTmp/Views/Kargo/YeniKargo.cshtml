@model bitirme.Models.Siniflar.KargoDetay
@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Kargo Sayfası</h2>
<br />
<form class="form-group" method="post">
    
    @Html.LabelFor(x => x.TakipKodu, "Takip Kodu:")
    <input type="text" value="@ViewBag.takipkod" class="form-control" readonly name="TakipKodu" />

    @*html helper ile label, textbox gibi yapıları kullandım*@
    <br />
    @Html.LabelFor(x => x.Personel, "Personel:")
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    @*virgülden sonraki new ile başlayan kısım textbox'a css vermek için*@
    <br />
    @Html.LabelFor(x => x.Alici, "Alıcı:")
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih, "Tarih:")
    <input class="form-control" type="date" name="Tarih" />
    <br />
    @Html.LabelFor(x => x.Aciklama, "Açıklama:")
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">KAYDET</button>
</form>

