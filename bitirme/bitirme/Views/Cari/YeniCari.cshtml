@model bitirme.Models.Siniflar.Cariler
@{
    ViewBag.Title = "YeniCari";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Cari Ekle</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.CariAd, "Cari Adı:")
    @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
    @*virgülden sonraki new ile başlayan kısım textbox'a css vermek için*@
    @*html helper ile label, textbox gibi yapıları kullandım*@
    <br />
    @Html.LabelFor(x => x.CariSoyad, "Cari Soyadı:")
    @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CariSehir, "Cari Şehri:")
    @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mail, "Cari Mail'i:")
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    
    <button class="btn btn-info">KAYDET</button>
</form>

